<%= render 'shared/page_title', title: 'Create a New Ingredient' %>

<%= render 'shared/errors', obj: @ingredient %>

<div class="row">
  <div class="well col-md-6 col-md-offset-3">
    <%= form_for @ingredient do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      
      <%= f.submit 'Create Ingredient', class: 'btn btn-success submit-btn' %>
    <% end %>
  </div>
</div>