<%= render 'shared/page_title', title: 'Create a New Style' %>

<%= render 'shared/errors', obj: @style %>

<div class="row">
  <div class="well col-md-6 col-md-offset-3">
    <%= form_for @style do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      
      <%= f.submit 'Create Style', class: 'btn btn-success submit-btn' %>
    <% end %>
  </div>
</div>